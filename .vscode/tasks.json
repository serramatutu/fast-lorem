{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Make: build active file",
            "command": "/usr/bin/make",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "args": [
                "build_debug",
                "TARGET=${fileBasenameNoExtension}",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ],
    "version": "2.0.0"
}